{
    "manifest_version": 2,
    "name": "chrome-extension-template2",
    "version": "0.0.1",
    "description": "Chrome extension boilerplate, replace all values!",
    "icons": {
        "16": "16x16.png",
        "48": "48x48.png",
        "128": "128x128.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Boilerplate popup!",
        "default_popup": "index.html"
    },
    "permissions": [
        "tabs",
        "<all_urls>",
        "activeTab",
        "bookmarks"
    ]
}