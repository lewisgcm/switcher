{
    "manifest_version": 2,
    "name": "Switcher",
    "version": "1.0.0",
    "description": "Switcher allows you to create profiles and switch them in to the bookmarks bar!",
    "icons": {
        "16": "16x16.png",
        "48": "48x48.png",
        "128": "128x128.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "tabs",
        "<all_urls>",
        "activeTab",
        "bookmarks"
    ]
}